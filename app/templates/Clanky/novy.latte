{* Latte template *}

{block content}
{if $user->isInRole('admin')}
    <header>
    </header>
    <aside>
        <h2>Seznam obrázků</h2>
            {control pridatObrForm}
        <table>
            <tr n:foreach="$obrazky as $obrazek">
                <td><img class="produkty" src="{$obrazek['file']|dataStream}" ></td>
                <td>{$obrazek['adresa']}</td>
            </tr>
        </table>
        
    </aside>
    <article class="newClanek">
        <header>
            <h2>Nový článek</h2>
        </header>

        {form clanekForm}
            <table align="center">
                <tr class="required">
                    <td>{label nadpis /}</td>
                    <td>{input nadpis}</td>
                </tr>
                <tr class="required">
                    <td>{label popis /}</td>
                    <td>{input popis}</td>
                </tr>
                <tr class="required">
                    <td colspan="2">{input text}</td>
                </tr>
                <td></td>
                <td>{input send}</td>
                </tr>
            </table>
        {/form}
    </article>
{/if}